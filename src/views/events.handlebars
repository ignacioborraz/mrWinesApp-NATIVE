<main class="flex-grow-1 d-flex flex-column align-items-center p-3 my-2 w-100">
  <h2 class="text-center">OUR MOVIES!</h2>
  <div
    class="flex-grow-1 d-flex flex-wrap justify-content-evenly align-items-center"
  >
    {{#each events}}
      <div class="card m-2" style="width: 320px;">
        <img
          src="{{this.poster}}"
          style="height: 200px;"
          class="card-img-top object-fit-cover"
          alt="{{this.name}}"
        />
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title text-center">{{this.name}}</h5>
          <p class="card-text text-center">{{this.place}} - {{this.price}}USD</p>
          <button type="button" class="btn btn-danger">ADD TO CART!</button>
        </div>
      </div>
    {{/each}}
  </div>
</main>